{
  "name": "@jobseek/cdk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "./scripts/deploy.sh",
    "deploy:dev": "./scripts/deploy.sh dev",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh prod",
    "deploy:dev:auto": "./scripts/deploy.sh dev --auto-approve",
    "deploy:dev:skip-secrets": "./scripts/deploy.sh dev --skip-secrets",
    "deploy:backend": "./scripts/deploy-backend.sh",
    "deploy:backend:dev": "./scripts/deploy-backend.sh dev",
    "deploy:backend:staging": "./scripts/deploy-backend.sh staging",
    "deploy:backend:prod": "./scripts/deploy-backend.sh prod",
    "deploy:nextjs": "./scripts/deploy-nextjs.sh",
    "deploy:nextjs:dev": "./scripts/deploy-nextjs.sh dev",
    "deploy:nextjs:staging": "./scripts/deploy-nextjs.sh staging",
    "deploy:nextjs:prod": "./scripts/deploy-nextjs.sh prod",
    "verify": "./scripts/verify-deployment.sh",
    "verify:dev": "./scripts/verify-deployment.sh dev",
    "verify:staging": "./scripts/verify-deployment.sh staging",
    "verify:prod": "./scripts/verify-deployment.sh prod",
    "secrets": "ts-node scripts/deploy-secrets.ts",
    "secrets:dev": "ts-node scripts/deploy-secrets.ts dev",
    "secrets:staging": "ts-node scripts/deploy-secrets.ts staging",
    "secrets:prod": "ts-node scripts/deploy-secrets.ts prod",
    "diff": "cdk diff --all",
    "synth": "cdk synth --all",
    "destroy:dev": "cdk destroy --all --context environment=dev",
    "destroy:staging": "cdk destroy --all --context environment=staging",
    "destroy:prod": "echo 'WARNING: About to destroy PRODUCTION! Use: cdk destroy --all --context environment=prod'",
    "cleanup": "./scripts/cleanup.sh",
    "cleanup:dev": "./scripts/cleanup.sh dev",
    "cleanup:staging": "./scripts/cleanup.sh staging",
    "cleanup:prod": "./scripts/cleanup.sh prod",
    "cleanup:dev:force": "./scripts/cleanup.sh dev --force",
    "cleanup:dev:amplify": "./scripts/cleanup.sh dev amplify"
  },
  "devDependencies": {
    "@types/node": "20.11.5",
    "aws-cdk": "2.122.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "dependencies": {
    "aws-cdk-lib": "2.122.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "dotenv": "^16.0.0"
  }
}